# GCP 部署環境變數範本
# 複製此文件內容並在 Cloud Run 環境變數中設置

# GCP 專案配置
GCP_PROJECT_ID=your-project-id
GCP_REGION=asia-east1
GCP_SERVICE_NAME=9jang-backend
GCP_STORAGE_BUCKET=your-project-id-frontend
GCP_CLOUD_SQL_INSTANCE=your-cloud-sql-instance

# Cloud SQL 連接配置
CLOUD_SQL_CONNECTION_NAME=${GCP_PROJECT_ID}:${GCP_REGION}:${GCP_CLOUD_SQL_INSTANCE}
DATABASE_NAME=your_database_name
DATABASE_USER=your_database_user
DATABASE_PASSWORD=your_database_password
DATABASE_HOST=/cloudsql/${CLOUD_SQL_CONNECTION_NAME}
DATABASE_PORT=5432

# Django 配置
DJANGO_SECRET_KEY=your-production-secret-key-here
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=your-service-url.run.app,yourdomain.com

# CORS 配置
CORS_ALLOW_ALL_ORIGINS=False
CORS_ALLOWED_ORIGINS=https://storage.googleapis.com,https://your-frontend-domain.com

# CSRF 配置
CSRF_TRUSTED_ORIGINS=https://your-frontend-domain.com,https://storage.googleapis.com

# Session 配置
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_SAMESITE=Lax
SESSION_COOKIE_HTTPONLY=True

# 安全配置
SECURE_SSL_REDIRECT=True

# JWT 配置
JWT_ACCESS_TOKEN_LIFETIME_HOURS=1
JWT_REFRESH_TOKEN_LIFETIME_DAYS=7
JWT_ROTATE_REFRESH_TOKENS=True
JWT_BLACKLIST_AFTER_ROTATION=True

# 媒體文件配置（必須使用 Cloud Storage 以持久化存儲）
# 重要：必須設置 GS_BUCKET_NAME，否則上傳的圖片會在容器重啟後丟失
GS_BUCKET_NAME=your-project-id-media
GS_PROJECT_ID=your-project-id
MEDIA_URL=https://storage.googleapis.com/your-project-id-media/
MEDIA_ROOT=

